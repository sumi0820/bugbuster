{{> sidebarLeft}}

{{> sidebarRight}}


<div class="posts__container">
  {{#each projects}}
  <a class="ui card" href="/project/{{this._id}}">
    <div class="content">
      <div class="header">
        <h2>
          {{this.title}}
        </h2>
      </div>
      <div class="meta">
        <span class="category">{{this.user.username}} : </span>
        <div class="right floated">
          <span class="date"> Posted on {{dateFormat postInfo.post.createdAt "MMMM Do YYYY"}} </span>
        </div>
      </div>
      <div class="description">
        <p>{{this.description}}</p>
      </div>
    </div>
    <div class="extra content">
      <div class="left floated author">
        <div class="project__card__footer">
          <div class="status">
            {{this.status}}
          </div>

        </div>
      </div>
      <div class="right floated author">
        <img class="ui avatar image" src="{{this.user.image}}"> {{this.user.username}}
      </div>
    </div>
  </a>
  {{/each}}
</div>